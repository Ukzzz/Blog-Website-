<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogs</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>

  <body class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 min-h-screen text-gray-100">
    <!-- Header -->
    <header class="border-b border-gray-700 shadow-sm py-4 mb-10">
      <div class="container mx-auto px-4 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-white">📝 My Blog</h1>
        <nav class="space-x-6 text-sm">
          <a href="/" class="text-gray-300 hover:text-white transition">Home</a>
          <a href="/blog" class="text-gray-300 hover:text-white transition">New Post</a>
        </nav>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 pb-16">
      <h2 class="text-3xl font-extrabold mb-8 text-center text-white tracking-tight">
        📚 Recent Blog Posts
      </h2>

      <!-- Blog Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% blogs.forEach(blog => { %>
        <div class="bg-white/90 backdrop-blur-md rounded-2xl shadow-xl p-6 border border-gray-200 text-gray-900 hover:shadow-2xl transition duration-300">
          <!-- Title -->
          <h3 class="text-xl font-bold text-blue-800 mb-2"><%= blog.title %></h3>

          <!-- Meta Info (fake for now) -->
          <div class="text-sm text-gray-500 mb-2">
            👤 <span class="font-medium">Author</span> • 🕒 <%= blog.createdAt ? blog.createdAt.toDateString() : 'Today' %>
          </div>

          <!-- Content Preview -->
          <p class="text-gray-700 mb-4 leading-relaxed tracking-wide line-clamp-5">
            <%= blog.content %>
          </p>

          <!-- Actions -->
          <div class="flex justify-between items-center">
            <!-- Delete -->
            <form
              action="/viewBlog/<%= blog._id %>?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this blog post?')"
              class="inline"
            >
              <button
                type="submit"
                class="text-red-600 font-semibold hover:text-red-800 transition-colors"
              >
                🗑 Delete
              </button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="text-center text-gray-400 text-sm mt-12 border-t border-gray-800 pt-6">
      © <%= new Date().getFullYear() %> My Blog Platform. All rights reserved.
    </footer>
  </body>
</html>
